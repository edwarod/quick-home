@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">

    <div class="row">
        <div class="col-sm">
            <h5 class="text-center font-weight-light">Stratum</h5>
            <div class="input-group">
                <span class="input-group-prepend">
                    <button type="button" class="btn btn-outline-secondary btn-number" disabled="disabled" data-type="minus" data-field="quant[1]">
                        <span>-</span>
                    </button>
                </span>
                <input type="text" id="stratumRange" name="quant[1]" class="form-control input-number" value="0" min="0" max="10">
                <span class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary btn-number" data-type="plus" data-field="quant[1]">
                        <span>+</span>
                    </button>
                </span>
            </div>
        </div>
        <div class="col-sm">

            <h5 class="text-center font-weight-light">Rooms</h5>

            <div class="input-group">
                <span class="input-group-prepend">
                    <button type="button" class="btn btn-outline-secondary btn-number" disabled="disabled" data-type="minus" data-field="quant[2]">
                        <span>-</span>
                    </button>
                </span>
                <input type="text" id="roomsRange" name="quant[2]" class="form-control input-number" value="0" min="0" max="10">
                <span class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary btn-number" data-type="plus" data-field="quant[2]">
                        <span>+</span>
                    </button>
                </span>
            </div>
        </div>
        <div class="col-sm">

            <h5 class="text-center font-weight-light">Bathrooms</h5>

            <div class="input-group">
                <span class="input-group-prepend">
                    <button type="button" class="btn btn-outline-secondary btn-number" disabled="disabled" data-type="minus" data-field="quant[3]">
                        <span>-</span>
                    </button>
                </span>
                <input type="text" id="bathroomsRange" name="quant[3]" class="form-control input-number" value="0" min="0" max="10">
                <span class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary btn-number" data-type="plus" data-field="quant[3]">
                        <span>+</span>
                    </button>
                </span>
            </div>

        </div>
        <div class="col-sm">

            <h5 class="text-center font-weight-light">Parking Slots</h5>

            <div class="input-group">
                <span class="input-group-prepend">
                    <button type="button" class="btn btn-outline-secondary btn-number" disabled="disabled" data-type="minus" data-field="quant[4]">
                        <span>-</span>
                    </button>
                </span>
                <input type="text" id="parkingSlotsRange" name="quant[4]" class="form-control input-number" value="0" min="0" max="10">
                <span class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary btn-number" data-type="plus" data-field="quant[4]">
                        <span>+</span>
                    </button>
                </span>
            </div>

        </div>
        <div class="col-sm">

            <h5 class="text-center font-weight-light">Balconies</h5>

            <div class="input-group">
                <span class="input-group-prepend">
                    <button type="button" class="btn btn-outline-secondary btn-number" disabled="disabled" data-type="minus" data-field="quant[5]">
                        <span>-</span>
                    </button>
                </span>
                <input type="text" id="balconiesRange" name="quant[5]" class="form-control input-number" value="0" min="0" max="10">
                <span class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary btn-number" data-type="plus" data-field="quant[5]">
                        <span>+</span>
                    </button>
                </span>
            </div>

        </div>
    </div>
    <div class="row" style="border-top-width: 0px;border-top-style: solid;margin-top: 15px;">
        <div class="col">
            <label for="areaMin">Area Min</label>
        </div>
        <div class="col">
            <input type="number" class="form-control" id="areaMin" value="">
        </div>
        <div class="col">
            <label for="areaMax">Area Max</label>
        </div>
        <div class="col">
            <input type="number" class="form-control" id="areaMax" value="">
        </div>
        <div class="col">
            <label for="suggestedCanonMin">Suggested Canon Min</label>
        </div>
        <div class="col">
            <input type="number" class="form-control" id="suggestedCanonMin" value="">
        </div>
        <div class="col">
            <label for="suggestedCanonMax">Suggested Canon Max</label>
        </div>
        <div class="col">
            <input type="number" class="form-control" id="suggestedCanonMax" value="">
        </div>
    </div>
    <div class="row" style="border-top-width: 0px; border-top-style: solid; margin-top: 15px;">
        <div class="col">
            <label for="propertyTypeSelect">Suggested Canon Max</label>
        </div>
        <div class="col">
            <select id="propertyTypeSelect" class="custom-select">
                <option selected>Open this select menu</option>
                <option value="0">Flat</option>
                <option value="1">House</option>
                <option value="2">Room</option>
            </select>
        </div>
        <div class="col">
            <div class="custom-control custom-checkbox">
                <label class="custom-control-label" for="HasElevatorCheck">Has elevator</label>
                <input type="checkbox" class="custom-control-input" id="HasElevatorCheck">
            </div>
        </div>
        <div class="col">
            <button id="search" type="button" class="btn btn-primary" onclick="return SearchProperties();">Search</button>
        </div>
    </div>
</div>

<div id="propertySearchResultDiv" class="container">
    <h2>Property Search Result</h2>
    <table id="propertySearchTable" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>
                Property ID
            </th>
            <th>
                Address
            </th>
            <th>
                Stratum
            </th>
            <th>
                Area
            </th>
            <th>
                Rooms
            </th>
            <th>
                Bathrooms
            </th>
            <th>
                Parking Slots
            </th>
            <th>
                Has Elevator
            </th>
            <th>
                Balconies
            </th>
            <th>
                Appraisal
            </th>
            <th>
                Property Type
            </th>
            <th>
                Suggested Canon
            </th>
        </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
</div>